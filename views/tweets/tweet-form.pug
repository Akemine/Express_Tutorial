extends ../layout.pug

block content 
    script(src="/javascripts/tweets/tweet.js")
    div(class="d-flex flex-row content mx-auto mt-4")
        div(class="profile-container") 
            include ../includes/profile.pug
        div(class="flex-fill")
            form(class="card" method="post" action=tweet._id ? "/tweets/update/"+tweet._id : "/tweets")
                div(class="card-header") Ecrire un X
                div(class="card-body") 
                    div(class="mb-3")
                        textarea(class="form-control" name="content", placeholder="What's happening", id="tweet-textarea-content")= tweet.content
                    if errors 
                        ul(class="my-2")
                            each error in errors 
                                li(class="text-danger")= error
                    div(class="w-100")
                        input(type="submit" value="Send" class="btn btn-primary ms-auto d-block")